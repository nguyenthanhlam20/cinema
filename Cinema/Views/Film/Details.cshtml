@using Cinema.Models;
@using Cinema.Requests;

@model Film

<section class="bg-light">
    <div class="container pb-5">
        <div class="row">
            <div class="col-lg-5 mt-5">
                <div class="card mb-3">
                    <img class="card-img img-fluid"
                         src="@Model.Img" alt="Card image cap"
                         style="height: 700px; width: auto"
                         id="product-detail">
                </div>
                <div class="row">
                    <!--Start Carousel Wrapper-->
                    <!--End Carousel Wrapper-->

                </div>
            </div>
            <!-- col end -->
            <div class="col-lg-7 mt-5">
                <div class="card" style="height: 700px">
                    <div class="card-body">
                        <h1 class="h2">@Model.Title</h1>
                        <ul class="list-inline">
                            <li class="list-inline-item">
                                <h6>Genres:</h6>
                            </li>
                            <li class="list-inline-item">
                                <p class="text-muted">
                                    <strong>@Model.Genre.Name</strong>
                                </p>
                            </li>
                        </ul>

                        <h6>Description:</h6>
                        <p>@Model.Description</p>
                        <ul class="list-inline">
                            <li class="list-inline-item">
                                <h6>Author :</h6>
                            </li>
                            <li class="list-inline-item">
                                <p class="text-muted"><strong>@Model.Author</strong></p>
                            </li>
                        </ul>

                        <ul class="list-inline d-flex">
                            <li class="list-inline-item">
                                <h6>Casts:</h6>
                            </li>
                            <li class="list-inline-item">
                                <p class="text-muted">
                                    <strong>@Model.Actor </strong>
                                </p>
                            </li>
                        </ul>

                        <h6>Movie duration: @Model.Time minute</h6>
                        <h6 class="mt-4">Language: @Model.CountryCodeNavigation.CountryName</h6>
                        <form class="mt-5" asp-controller="Show" asp-action="Select" method="GET">
                            <div class="row pb-3">
                                <div class="col d-grid">
                                    <input hidden type="text" value="@Model.FilmId" name="filmId" />
                                    <button type="submit" class="btn btn-success btn-lg">
                                        Buy Ticket
                                    </button>
                                </div>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
