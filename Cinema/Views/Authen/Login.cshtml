@using Cinema.Requests
@model LoginRequest

<section class="vh-100" style="background-image: url(assets/images/cinema.jpg)">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col col-xl-10">
                <div class="card" style="border-radius: 1rem;">
                    <div class="row g-0">
                        <div class="col-md-6 col-lg-5 d-none d-md-block">
                            <!--Image left-->
                            <img src="/assets/images/movie-night-design-template-eef943492408082d7bbd61673b6f9bf4_screen.jpg" alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem; height: 100%; width: auto;" />
                        </div>
                        <div class="col-md-6 col-lg-7 d-flex align-items-center">
                            <div class="card-body p-4 p-lg-5 text-black">

                                <form method="post" asp-controller="Authen" asp-action="Login">

                                    <div class="d-flex align-items-center mb-3 pb-1">
                                        <h1>Cinema</h1>
                                    </div>

                                    <h2 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">
                                        Sign into your
                                        account
                                    </h2>

                                    <div class="form-outline mb-4">
                                        <label class="fw-bold" for="form2Example17">Email address</label>
                                        <input asp-for="Email" type="email" id="form2Example17"
                                               value="user@gmail.com"
                                               class="form-control " placeholder="Email address" name="Email" />
                                    </div>

                                    <div class="form-outline mb-4">
                                        <label class="fw-bold" for="form2Example27">Password</label>
                                        <input asp-for="Password" type="password" id="form2Example27"
                                               value="c4ca4238a0b923820dcc509a6f75849b"
                                               class="form-control " placeholder="Password" name="Password" />
                                    </div>

                                    <div class="pt-1 mb-4">
                                        <button class="btn btn-dark btn-block" type="submit">Login</button>
                                    </div>

                                    <p class="mb-5 pb-lg-2" style="color: #393f81;">
                                        Don't have an account? <a asp-controller="Authen" asp-action="Register" style="color: #393f81;">Register here</a>
                                    </p>
                                    <a href="#!" class="small text-muted">Terms of use.</a>
                                    <a href="#!" class="small text-muted">Privacy policy</a>
                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
