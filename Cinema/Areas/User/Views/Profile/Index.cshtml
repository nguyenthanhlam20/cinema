@using Cinema.Models
@model User

<div class="container mt-3 pagetitle">
    <h1>Profile Settings</h1>
</div><!-- End Page Title -->

<div class="container rounded bg-white border-0 card p-3 ">
    <div class="row d-flex justify-content-center">
        <form asp-controller="Profile" asp-action="Index" method="post">
            <div class="row">
                <div >
                    <label class="mb-1">Fullname</label>
                    <input type="text" class="form-control" placeholder="fullname" asp-for="Fullname">
                </div>
                <div class="mt-2">
                    <label class="mb-1">Email</label>
                    <input type="text" class="form-control" placeholder="email" asp-for="Email"
                           readonly>
                </div>
                <div class="mt-2">
                    <label class="mb-1">Phone</label>
                    <input type="text" class="form-control" placeholder="phone" asp-for="Phone"
                           maxlength="11"
                           minlength="10" name="phone">
                </div>
                <div class="mt-2">
                    <label class="mb-1">Address</label>
                    <input type="text" class="form-control" placeholder="address" asp-for="Address"
                           name="address">
                </div>
                <div class="mt-2">
                    <label class="mb-1">DOB</label>
                    <input type="date" class="form-control" placeholder="DOB" asp-for="Dob" name="dob">
                </div>
                <div class="mt-2">
                    <label class="mb-1">Gender</label>
                    <select asp-for=Gender name="gender" class="form-control">
                        <option value="true">
                            Male
                        </option>
                        <option value="false">
                            Female
                        </option>
                    </select>
                </div>

            </div>
            <div class="mt-3 ">
                <button class="btn btn-primary w-100" type="submit">
                    Save
                </button>
            </div>
        </form>

    </div>
</div>