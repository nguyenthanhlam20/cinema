@using Cinema.Requests
@model ChangePasswordRequest



<div class="container mt-3 pagetitle">
    <h1>Change Password</h1>
</div><!-- End Page Title -->

<div class="container bg-white border-0 card p-3">
    <form asp-area="User" asp-controller="Profile" asp-action="ChangePassword" method="post">
        <div class="row">
            <div class="mb-2">
                <label class="mb-1">Old Password</label>
                <input type="password" class="form-control" required placeholder="Enter your old password" asp-for="OldPassword">
            </div>
            <div class="mb-2">
                <label class="mb-1">New Password</label>
                <input type="password" class="form-control" required placeholder="Enter new password" asp-for="NewPassword" />
            </div>
            <div class="mb-2">
                <label class="mb-1">Confirm Password</label>
                <input type="password" class="form-control" required placeholder="Confirm new password" asp-for="ConfirmPassword" >
            </div>
        </div>
        <div class="mt-3">
            <button class="btn btn-primary w-100" type="submit">
                Save Changes
            </button>
        </div>
    </form>
</div>
