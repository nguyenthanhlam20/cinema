@using Cinema.Models
@model Show

@{
    var films = ViewData["Films"] as List<Film>;
    var slots = ViewData["Slots"] as List<Slot>;
    var rooms = ViewData["Rooms"] as List<Room>;
}
<div class="pagetitle">
    <h1>Show Details</h1>
</div><!-- End Page Title -->

<div class="container rounded bg-white card border-0 p-3">
    <div class="row">
        <div class="col-md-12">
            <label class="mb-1">Film</label>
            <select disabled asp-for="FilmId" class="form-control">
                @if (films != null)
                {
                    @foreach (var item in films)
                    {
                        <option value="@item.FilmId">@item.Title</option>
                    }
                }
            </select>
        </div>
        <div class="col-md-12 mt-3">
            <label class="mb-1">Date</label>
            <input value="@Model.ShowDate.ToString("yyyy-MM-dd")" type="date" disabled class="form-control"
                   placeholder="premiere" value="">
        </div>
        <div class="col-md-12 mt-3">
            <label class="mb-1">Slot</label>
            <select disabled asp-for="SlotId" class="form-control">
                @if (slots != null)
                {
                    @foreach (var item in slots)
                    {
                        <option value="@item.SlotId">@item.Time</option>
                    }
                }
            </select>
        </div>
        <div class="col-md-12 mt-3">
            <label class="mb-1">Theater</label>
            <select disabled asp-for="RoomId" class="form-control">
                @if (rooms != null)
                {
                    @foreach (var item in rooms)
                    {
                        <option value="@item.RoomId">@item.Name</option>
                    }
                }
            </select>
        </div>
    </div>
    <div class="mt-3">
        <a class="btn btn-primary  w-100" asp-area="Admin" asp-controller="Show" asp-action="Update" asp-route-showId="@Model.ShowId">Save</a>
    </div>
</div>
