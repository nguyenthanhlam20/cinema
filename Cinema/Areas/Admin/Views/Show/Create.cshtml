@using Cinema.Models
@model Show

@{
    var films = ViewData["Films"] as List<Film>;
    var slots = ViewData["Slots"] as List<Slot>;
    var rooms = ViewData["Rooms"] as List<Room>;
}
<div class="pagetitle">
    <h1>Add New Show</h1>
</div><!-- End Page Title -->

<div class="container rounded bg-white card border-0 p-3">
    <form asp-area="Admin" asp-controller="Show" asp-action="Create" method="post">
        <div class="row">
            <div class="col-md-12">
                <label class="mb-1">Choose film</label>
                <select asp-for="FilmId" class="form-control">
                    @if (films != null)
                    {
                        @foreach (var item in films)
                        {
                            <option value="@item.FilmId">@item.Title</option>
                        }
                    }
                </select>
            </div>
            <div class="col-md-12 mt-3">
                <label class="mb-1">Choose date</label>
                <input asp-for="ShowDate" type="date" required class="form-control"
                       placeholder="premiere" value="">
            </div>
            <div class="col-md-12 mt-3">
                <label class="mb-1">Choose slot</label>
                <select asp-for="SlotId" class="form-control">
                    @if (slots != null)
                    {
                        @foreach (var item in slots)
                        {
                            <option value="@item.SlotId">@item.Time</option>
                        }
                    }
                </select>
            </div>
            <div class="col-md-12 mt-3">
                <label class="mb-1">Choose theater</label>
                <select asp-for="RoomId" class="form-control">
                    @if (rooms != null)
                    {
                        @foreach (var item in rooms)
                        {
                            <option value="@item.RoomId">@item.Name</option>
                        }
                    }
                </select>
            </div>
        </div>
        <div class="mt-3">
            <button class="btn btn-primary  w-100" type="submit">Save</button>
        </div>
    </form>
</div>
